{
  "name": "perennialmono",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "postinstall": "patch-package",
    "deploy:goerli": "./scripts/deploy_goerli.sh",
    "deploy:arbitrumGoerli": "./scripts/deploy_arbitrum_goerli.sh",
    "deploy:optimismGoerli": "./scripts/deploy_optimism_goerli.sh",
    "deploy:baseGoerli": "./scripts/deploy_base_goerli.sh",
    "verify:goerli": "yarn workspaces run verify --network goerli",
    "deploy:fork:goerli": "concurrently \"yarn workspace @equilibria/perennial run node:fork:goerli --no-deploy > /dev/null\" \"./scripts/deploy_goerli_fork.sh\"",
    "deploy:fork:arbitrumGoerli": "concurrently \"yarn workspace @equilibria/perennial run node:fork:arbitrumGoerli --no-deploy > /dev/null\" \"./scripts/deploy_arbitrum_goerli_fork.sh\"",
    "deploy:fork:optimismGoerli": "concurrently \"yarn workspace @equilibria/perennial run node:fork:optimismGoerli --no-deploy > /dev/null\" \"./scripts/deploy_optimism_goerli_fork.sh\"",
    "deploy:fork:baseGoerli": "concurrently \"yarn workspace @equilibria/perennial run node:fork:baseGoerli --no-deploy > /dev/null\" \"./scripts/deploy_base_goerli_fork.sh\"",
    "deploy:fork:mainnet": "concurrently \"yarn workspace @equilibria/perennial run node:fork:mainnet --no-deploy > /dev/null\" \"./scripts/deploy_mainnet_fork.sh\""
  },
  "devDependencies": {
    "@0xsequence/multicall": "^0.43.20",
    "@chainlink/contracts": "0.5.1",
    "@codechecks/client": "^0.1.10",
    "@defi-wonderland/smock": "^2.3.4",
    "@equilibria/root": "0.2.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.1",
    "@openzeppelin/contracts": "4.8.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "chai": "^4.3.7",
    "concurrently": "^7.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "^2.13.0",
    "hardhat-contract-sizer": "^2.4.0",
    "hardhat-dependency-compiler": "^1.1.2",
    "hardhat-deploy": "^0.11.4",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": ">=6",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.6",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.0.0",
    "typechain": "^8.1.0",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "*.{ts,.js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": "prettier --write"
  }
}
